<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

   </head>

<h1>FeedBack Form</h1>
<div class="col-sm-6">
    <label class="control-label">NAME*</label>
    <input type="text" class="form-control" placeholder="Enter your Name" style="min-width:100%; height:50px" /><br>
</div>
<div class=" col-sm-6">
    <label>CONTACT NUMBER*</label>
    <input type="text" class="form-control" placeholder="Enter Your Mobile Number " style="min-width:100%; height:50px" /><br>
</div>
<div class=" col-sm-6">
    <label>EMAIL ID*</label>
    <input type="text" class="form-control" placeholder="Enter Email ID" style="min-width:100%; height:50px" <br>
</div>
<div class=" col-sm-6">
    <label>DEPARTMENT *</label>
    <select type="text" class="form-control" placeholder="Select Department" style="min-width:100%; height:50px" /><br>
    <option>Select Location</option>
    <option>Customer service</option>
    <option>Nursing</option>
    <option>Billing</option>
    <option>Admin</option>
    <option>Doctor</option>
    <option>Others</option>
 </select><br>
</div>
<div class=" col-sm-12">
    <label>HOSPITAL NAME*</label>
    <select type="text" class="form-control" placeholder="select Hospital" style="min-width:100%; height:50px" />
    <option>Select Hospital</option>
    <option>Bangalore ,Chinmay Hospital indranagar</option>
    <option>Jaipur</option>
    <option>Bhopal</option>
    </select><br>
</div>
<div class=" col-sm-12">
    <label>YOUR QUERY*</label>
    <input type="text" class="form-control" placeholder="Enter your querys " style="min-width:100%; height:50px" />
</div>
<div class="form-group col-sm-12">
    <input type="checkbox">By clicking Submit, you agreed to Terms & Conditions and Privacy Policy of Narayana Health’s website</input><br><br>
    <div class="col-md-12" style="text-align:right">
        <button type="button" class="form-control btn btn-default" style="width:150px;border: 1px solid #00acee;color: #00acee;">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
            </svg>
            <span styleS="/*!line-height:50px;*//*!flot:right;*//*!text-align:_width:100px;*50px;position:absolute;top:0;center;">SUBMIT</span>
        </button>
    </div>

