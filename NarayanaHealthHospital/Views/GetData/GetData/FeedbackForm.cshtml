<style>
    .form-control {
        border-radius: 0px;
        height: 50px;
    }

    .btn.btn-default svg {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        width: 37px;
        height: 50px;
        float: left;
        border-right: 1px solid #00acee;
    }

    .btn.btn-default {
        position: relative;
        padding: 0;
